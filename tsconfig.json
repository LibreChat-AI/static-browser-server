{
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "useUnknownInCatchVariables": false,
    "resolveJsonModule": true,
    "target": "es2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./out",
    "noEmit": true
  },
  "exclude": ["node_modules", "out"],
  "include": ["./build-relay.ts", "src"]
}
